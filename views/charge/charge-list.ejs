<%- include('../fragments/header.ejs') %>
    <main>
        <h2>Lista zarzutów</h2>
        <div class="table">
            <table class="table-list" id="chargeL">
                <thead>
                    <tr>
                        <th>Nazwa</th>
                        <th>Typ</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let charg of chargs) { %>
                        <tr>
                            <td>
                                <%= charg.Name %>
                            </td>
                            <td>
                                <%= charg.Type %>
                            </td>
                            <td>
                                <ul class="list-actions">
                                    <li>
                                        <a href="charge/desc/<%=charg.ChargeID%>"
                                            class="list-actions-button-details">Szczegóły</a>
                                    </li>
                                    <li>
                                        <a href="charge/edit/<%=charg.ChargeID%>"
                                            class="list-actions-button-edit">Edytuj</a>
                                    </li>
                                    <li>
                                        <a href="charge/delete/<%=charg.ChargeID%>"
                                            class="list-actions-button-delete">Usuń</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <p><a href="charge/add" class="button-add">Dodaj nowy zarzut</a></p>
    </main>
    <%- include('../fragments/footer.ejs') %>