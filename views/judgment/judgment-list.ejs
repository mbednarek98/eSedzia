<%- include('../fragments/header.ejs') %>
    <main>
        <h2>Lista wyroków</h2>
        <div class="table">
            <table class="table-list" id="judgmentL">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Zarzut</th>
                        <th>Skazany</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let judgm of judgms) { %>
                        <tr>
                            <td>
                                <%= (judgm.Date) ? judgm.Date.toISOString().split('T')[0] : '' %>
                            </td>
                            <td>
                                <%= judgm.charge.Name %>
                            </td>
                            <td>
                                <%= judgm.gperson.Name %>
                                    <%= judgm.gperson.Surname %>
                            </td>
                            <td>
                                <ul class="list-actions">
                                    <li>
                                        <a href="/judgment/desc/<%=judgm.JudgmentID%>"
                                            class="list-actions-button-details">Szczegóły</a>
                                    </li>
                                    <li>
                                        <a href="/judgment/edit/<%=judgm.JudgmentID%>"
                                            class="list-actions-button-edit">Edytuj</a>
                                    </li>
                                    <li>
                                        <a href="/judgment/delete/<%=judgm.JudgmentID%>"
                                            class="list-actions-button-delete">Usuń</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <p><a href="/judgment/add" class="button-add">Dodaj nowy wyrok</a></p>
    </main>
    <%- include('../fragments/footer.ejs') %>